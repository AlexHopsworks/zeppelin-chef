[Unit]
Description = Livy server
After = syslog.target network.target remote-fs.target

[Service]
User = <%= node.hadoop_spark.user %>

PIDFile = <%= node.livy.home %>/livy.pid
ExecStart = <%= node.livy.home %>/sbin/start-livy.sh
ExecStop = <%= node.livy.home %>/sbin/stop-livy.sh
LimitNOFILE = 20000

Type = forking

[Install]
WantedBy = multi-user.target
